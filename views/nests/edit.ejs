<%layout('layouts/boilerplate')%>

<div class="row">
  <h1 class="text-center">Edit Nest</h1>
  <div class="col-6 offset-3">
    <form
      action="/nests/<%= nest._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div class="mb-2">
        <label class="form-lable" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="nest[title]"
          value="<%=nest.title%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-2">
        <label class="form-lable" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="nest[location]"
          value="<%=nest.location%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-2">
        <label class="form-lable" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="nest[image]"
          value="<%=nest.image%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-2">
        <label class="form-lable" for="price">Nest Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-lable">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-lable"
            name="nest[price]"
            value="<%=nest.price%>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>
      <div class="mb-2">
        <label class="form-lable" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="nest[description]"
          required
        >
<%=nest.description%></textarea
        >
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-2"><button class="btn btn-info">Update Nest</button></div>
    </form>
    <a href="/nests/<%= nest._id%>">Back to Nest</a>
  </div>
</div>
