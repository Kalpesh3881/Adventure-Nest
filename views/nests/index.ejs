<%layout('layouts/boilerplate')%>
<h1>All Nests!</h1>
<div>
  <a href="/nests/new">Add New Nest</a>
</div>

<% for (let nest of nests) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="<%= nest.image %>" alt="" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= nest.title %></h5>
        <p class="card-text"><%= nest.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= nest.location %></small>
        </p>
        <a class="btn btn-primary" href="/nests/<%=nest._id%>"
          >View <%= nest.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% }%>
